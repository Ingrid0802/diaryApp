<div class="container-fluid" style="width: 400px;">
    <h1>ADD DIARY</span></h1>
    <form action="/add-to-diary" method="POST" class="card p-4">
        <div class="input-group input-group-sm mb-3">
            <label class="input-group-text" for="title">Title</label>
            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" id="title" name="title">
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="description">
                Text
            </label>
            <textarea class="form-control" aria-label="With textarea" name="description" id="description" cols="30" rows="5"></textarea>
        </div>

        <div class="input-group mb-3">
            <label class="input-group-text" for="date">Date</label>
            <input class="form-control" type="date" id="date" name="date">
        </div>

        <div class="flex-row">
            <button type="submit" class="btn btn-primary">Add to Diary</button>
        <button class="btn btn-danger"><a style="text-decoration: none; color: white;" href="/diary">Back</a></button>
        </div>
        

    </form>
</div>
